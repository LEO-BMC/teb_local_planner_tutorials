<!-- -->
<launch>

  <!-- Global Parameters -->
  <param name="/use_sim_time" value="false"/>

  <!-- Maps -->
  <node name="map_server" pkg="map_server" type="map_server"
        args="$(find teb_local_planner_tutorials)/maps/emptiness.yaml" output="screen">
    <param name="frame_id" value="map"/>
  </node>


  <!-- Transformations -->
  <node pkg="tf" type="static_transform_publisher" name="map_to_odom_publisher" args="0 0 0 0 0 0 1 map odom 10"/>
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_base_footprint_publisher" args="0 0 0 0 0 0 1 base_link base_footprint 10"/>


  <!-- Obstacle Sensor -->
  <node pkg="object_to_cloud" type="object_to_cloud_exe" name="object_to_cloud_node"/>

  <!-- Odom Converter -->
  <node pkg="odom_publisher" type="odom_publisher_exe" name="odom_publisher_node"/>


  <!-- Navigation -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find teb_local_planner_tutorials)/cfg/freespace/costmap_common_params.yaml" command="load"
              ns="global_costmap"/>
    <rosparam file="$(find teb_local_planner_tutorials)/cfg/freespace/costmap_common_params.yaml" command="load"
              ns="local_costmap"/>
    <rosparam file="$(find teb_local_planner_tutorials)/cfg/freespace/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find teb_local_planner_tutorials)/cfg/freespace/global_costmap_params.yaml" command="load"/>
    <rosparam file="$(find teb_local_planner_tutorials)/cfg/freespace/teb_local_planner_params.yaml" command="load"/>

    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
    <param name="planner_frequency" value="1.0"/>
    <param name="planner_patience" value="5.0"/>

    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>
    <param name="controller_frequency" value="5.0"/>
    <param name="controller_patience" value="15.0"/>

    <param name="clearing_rotation_allowed" value="false"/> <!-- Our carlike robot is not able to rotate in place -->
  </node>


  <!-- Visualisation -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find teb_local_planner_tutorials)/cfg/freespace_planner.rviz"/>

</launch>
